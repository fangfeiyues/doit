<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties>
        <property name="username" value="123456"/>
        <property name="id" value="12345"/>
    </properties>

    <settings>
        <!-- 下划线与驼峰式命名规则的映射 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="autoMappingBehavior" value="PARTIAL"/>
    </settings>

    <!--用于定义别名-->
    <typeAliases>
        <!--<package name="com.fang.doit.spring.mybatis"/>-->
        <typeAlias type="com.fang.doit.spring.mybatis.User" alias="user"/>
    </typeAliases>


    <!-- 用于定义全局的类型处理器 -->
    <typeHandlers>
        <!--<typeHandler handler="UserTypeHandler"></typeHandler>-->
    </typeHandlers>


    <!-- 不结合Spring 单独配置数据源 -->
    <environments default="development">
        <environment id="development">
            <!-- 事务管理类型 -->
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://47.100.237.162:3306/test?useUnicode=true"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>

    <!--用于配置 SQL 映射文件的位置信息-->
    <mappers>
        <mapper resource="mybatis/UserMapper.xml"/>
    </mappers>


</configuration>